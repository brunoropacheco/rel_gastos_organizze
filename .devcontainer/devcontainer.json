{
  "name": "Meu Ambiente Padrão",
  // Esta é a imagem "padrão" do GitHub Codespaces (Universal)
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // Seus comandos automáticos
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",

  // Suas extensões do VS Code
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}